<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_Chi_Tiet_Mon_An"
    android:background="@drawable/bgr">

    <TableRow
        android:id="@+id/tbr_start"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        >
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_height="50dp"
            android:layout_width="90dp"
            android:background="@drawable/ic_back"
            />

        <Button
            android:id="@+id/btn_print"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:contextClickable="true"
            android:cursorVisible="true"
            android:drawableStart="@drawable/ic_print"
            android:drawableRight="@drawable/ic_print"
            android:editable="false"
            android:gravity="center" />
        <Button
            android:id="@+id/btn_refresh"
            android:layout_height="50dp"
            android:layout_width="90dp"
            android:text="1"
            android:drawableRight="@drawable/ic_refresh"
            android:layout_marginLeft="20dp"
            />
        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_menu"
            />
    </TableRow>
    <TableRow
        android:id="@+id/tbv"
        android:layout_below="@id/tbr_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/yellow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Món"
            android:textSize="18dp"
            android:layout_marginLeft="70dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SL"
            android:textSize="18dp"
            android:layout_marginLeft="60dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>

    </TableRow>
    <LinearLayout
        android:id="@+id/ln_driver10"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/tbv"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <ScrollView
            android:id="@+id/scv_mondachon"
            android:layout_below="@+id/tbv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/xam">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ln_driver10"
        android:layout_marginTop="10dp">

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_thanhtoan2"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                app:layout_anchorGravity="center"
                android:background="@color/black"
                app:srcCompat="@drawable/ic_money"
                android:onClick="openThanhToan"/>

            <ImageButton
                android:id="@+id/btn_print2"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                app:srcCompat="@drawable/ic_print_white"
                android:layout_marginLeft="2dp"/>

           <TextView
               android:layout_width="40dp"
               android:layout_height="match_parent"
               android:text="Thanh Toán"
               android:textColor="@color/black"
               android:background="@color/white"
               android:layout_marginLeft="2dp"
               />
            <TextView
                android:id="@+id/txt_thanhtoan2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="14.10 $"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:gravity="center"
                android:background="@color/green"
                android:layout_marginLeft="2dp"
                />
        </TableRow>
    </LinearLayout>
</RelativeLayout>
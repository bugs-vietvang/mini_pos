<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_Chon_Mon"
    android:background="@drawable/bgr">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="#FFFFFF"
        app:srcCompat="@drawable/icplus" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            app:layout_anchorGravity="center"
            app:srcCompat="@drawable/ic_back" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_print_white" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@color/xam"
            android:drawableRight="@drawable/ic_refresh"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_menu" />
    </TableRow>

    <TableRow
        android:id="@+id/tbv"
        android:layout_below="@id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/yellow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Món"
            android:textSize="18dp"
            android:layout_marginLeft="70dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SL"
            android:textSize="18dp"
            android:layout_marginLeft="60dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>

    </TableRow>
    <LinearLayout
        android:id="@+id/ln_driver8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tbv"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <ScrollView
            android:id="@+id/scv_mondachon"
            android:layout_below="@+id/tbv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/xam">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/lntinhtien"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/ln_driver8"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtnhaptien"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:hint="0đ"
            android:textColorHint="@color/black"
            android:gravity="center"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_plus"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@color/xam"
            android:text="gia vị"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:gravity="center"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icplus"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@color/green"
            android:text="14.10 $"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>

</RelativeLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>
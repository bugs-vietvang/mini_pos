<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorAccent">
    <LinearLayout
        android:id="@+id/ln_formDangNhap_AppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_DangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Đăng Nhập"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="center"

            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_formDangNhap_DangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ln_formDangNhap_AppName"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_formDangNhap_Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_style"
            android:padding="15dp"
            android:hint="User Name"
            android:drawableStart="@drawable/ic_username"
            android:drawableLeft="@drawable/ic_username"
            android:drawableTint="@color/black"
            android:drawablePadding="5dp"
            android:layout_marginHorizontal="50dp"
            />
        <EditText
            android:id="@+id/ed_formDangNhap_PassWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_style"
            android:padding="15dp"
            android:hint="PassWord"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawableTint="@color/black"
            android:drawablePadding="5dp"
            android:layout_marginHorizontal="50dp"
            />

        <Button
            android:id="@+id/btn_formDangNhap_DangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dangnhap_style"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:text="Đăng Nhập"
            android:textColor="@color/white"
            android:onClick="openDangNhap"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_formDangNhap_QuenMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ln_formDangNhap_DangNhap"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/txt_formDangNhap_QuenMatKhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật Khẩu"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:id="@+id/txt_formDangNhap_DangKi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="Đăng Ký"
            android:textColor="@color/white"
            android:textSize="18dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_formDangNhap_Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ln_formDangNhap_QuenMatKhau"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_formDangNhap_DangNhapFB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_loginfb"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:text="Đăng Nhâp FaceBook"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_fb"
            android:drawableLeft="@drawable/ic_fb"
            android:paddingLeft="15dp"
            android:onClick="openDangNhapFB"/>
        <Button
            android:id="@+id/btn_formDangNhap_DangNhapGG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_logingg"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:text="Đăng Nhập GooGle"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_gg"
            android:drawableLeft="@drawable/ic_gg"
            android:paddingLeft="15dp"
            android:onClick="openDangNhapGG"/>

    </LinearLayout>
</RelativeLayout>
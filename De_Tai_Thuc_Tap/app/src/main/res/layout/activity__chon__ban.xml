<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_Chon_Ban"
    android:background="@drawable/bgr">

    <LinearLayout
        android:id="@+id/ln_day1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_ban1"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:text="1"
            android:textSize="25dp"
            android:onClick="openChonMon"
            android:background="@drawable/shape_ban"/>
        <Button
            android:id="@+id/btn_ban2"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:text="2"
            android:textSize="25dp"
            android:background="@drawable/shape_ban"
            android:layout_marginLeft="30dp"/>
        <Button
            android:id="@+id/btn_ban3"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:text="3"
            android:textSize="25dp"
            android:background="@drawable/shape_ban"
            android:layout_marginLeft="30dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_day2"
        android:layout_below="@+id/ln_day1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_ban4"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:text="4"
            android:textSize="25dp"
            android:background="@drawable/shape_ban"/>
        <Button
            android:id="@+id/btn_ban5"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:text="5"
            android:textSize="25dp"
            android:background="@drawable/shape_ban"
            android:layout_marginLeft="30dp"/>
        <Button
            android:id="@+id/btn_ban6"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:text="6"
            android:textSize="25dp"
            android:background="@drawable/shape_ban"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_day3"
        android:layout_below="@+id/ln_day2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_ban7"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:text="7"
            android:textSize="25dp"
            android:background="@drawable/shape_ban"/>
        <Button
            android:id="@+id/btn_ban8"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:text="8"
            android:textSize="25dp"
            android:background="@drawable/shape_ban"
            android:layout_marginLeft="30dp"/>
        <Button
            android:id="@+id/btn_ban9"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:text="9"
            android:textSize="25dp"
            android:background="@drawable/shape_ban"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_day4"
        android:layout_below="@+id/ln_day3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_ban10"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:text="10"
            android:textSize="25dp"
            android:background="@drawable/shape_ban"/>
        <Button
            android:id="@+id/btn_ban11"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:text="11"
            android:textSize="25dp"
            android:background="@drawable/shape_ban"
            android:layout_marginLeft="30dp"/>
        <Button
            android:id="@+id/btn_ban12"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:text="12"
            android:textSize="25dp"
            android:background="@drawable/shape_ban"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/edtChonBan"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:hint="1"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/shape_botrongoc"
        android:layout_below="@+id/ln_day4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"/>
</RelativeLayout>